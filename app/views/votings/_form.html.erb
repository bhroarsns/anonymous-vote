<%= form_with(model: voting) do |form| %>
  <% if voting.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(voting.errors.count, "error") %> prohibited this voting from being saved:</h2>

      <ul>
        <% voting.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-2">
    <%= form.label :title, "投票タイトル", class: "fw-bold", style: "display: block" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="my-2">
    <%= form.label :description, "説明", class: "fw-bold", style: "display: block" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="my-2">
    <%= form.label :choices, "選択肢(改行で追加)", class: "fw-bold", style: "display: block" %>
    <%= form.text_area :choices, class: "form-control" %>
  </div>

  <div class="my-2">
    <%= form.label :deadline, "締切(時刻まで入力必須)", class: "fw-bold", style: "display: block" %>
    <%= form.datetime_field :deadline, class: "form-control" %>
  </div>

  <div class="my-2">
    <%= form.label :mode, "モード", class: "fw-bold", style: "display: block" %>
    <%= form.select :mode, Voting.modes, {}, { class: "form-select" } %>
  </div>

  <div class="my-2">
    <%= form.label :config, class: "fw-bold", style: "display: block" %>
    <%= form.text_area :config, class: "form-control" %>
  </div>

  <div class="mt-2">
    <%= form.submit "保存する", class: "btn btn-primary" %>
  </div>
<% end %>
