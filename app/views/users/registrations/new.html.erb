<h2>新規アカウント登録</h2>

<div class="row mt-4">
  <div class="col">
    <%= form_with model:@user, url: registration_path(@user), local: true do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field mb-4">
        <%= f.label :name, "名前", class: "form-label" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>

      <div class="field mb-4">
        <%= f.label :email, "メールアドレス", class: "form-label" %>
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field mb-4">
        <%= f.label :password, "パスワード", class: "form-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <div class="form-text"><%= @minimum_password_length %>文字以上</div>
        <% end %>
      </div>

      <div class="field mb-4">
        <%= f.label :password_confirmation, "パスワード(確認)", class: "form-label"%>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "登録", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="col">
    <%= render "users/shared/links" %>
  </div>
</div>

