<%- if controller_name != 'sessions' %>
  <%= link_to "サインイン", new_session_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "新規アカウント登録", new_registration_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  パスワードを忘れた場合は<%= link_to "こちら", new_password_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  メールアドレス確認メールが届かない場合は<%= link_to "こちら", new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  アカウントロック解除メールが届かない場合は<%= link_to "こちら", new_unlock_path(resource_name) %><br />
<% end %>

<%= link_to "トップページに戻る", root_path %>
