<h2>パスワードリセット</h2>

<div class="row mt-4">
  <div class="col">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field mb-4">
        <%= f.label :password, "新しいパスワード", class: "form-label"%>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <div class: "form-text">(<%= @minimum_password_length %> characters minimum)</div>
        <% end %>
      </div>

      <div class="field mb-4">
        <%= f.label :password_confirmation, "新しいパスワード(確認)", class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "パスワードを変更", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="col">
    <%= render "users/shared/links" %>
  </div>
</div>
