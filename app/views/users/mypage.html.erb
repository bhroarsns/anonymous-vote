<h2>マイページ</h2>

<section class="card card-body my-5">
  <h4 class="card-title">作成した投票</h4>
  <div id="mypage.votings" style="overflow: scroll">
    <table class="table" style="white-space: nowrap">
      <thead>
        <th></th><th>説明</th><th>投票開始</th><th>投票終了</th>
      </thead>
      <tbody>
        <% @votings.each do |voting|%>
          <tr>
            <th><%= link_to voting.title, voting_path(voting) %></th>
            <td class="table-shortcut"><%= voting.description %></td>
            <td><%= l voting.start, format: :short %></td>
            <td><%= l voting.deadline, format: :short %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div>
    <%= link_to "新規作成", new_voting_path, class: "btn btn-primary"%>
  </div>
</section>

<%= link_to edit_user_registration_path(current_user) do %>アカウント設定<% end %>