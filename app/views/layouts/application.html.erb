<!DOCTYPE html>
<html>
  <head>
    <title>Anonymous-vote</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
      <div class="container-fluid">
        <%= link_to "Anonymous-vote", root_path, class: "navbar-brand" %>
        <ul class="navbar-nav">
          <% if current_user %>
            <li class="nav-item navbar-text navbar-shortcut"><%= current_user.name %></li>
            <li class="nav-item"><%= link_to "マイページ", mypage_path, class: "nav-link active" %></li>
            <li class="nav-item"><%= link_to "サインアウト", destroy_user_session_path, class: "nav-link active", data: { turbo_method: :delete } %></li>
          <% else %>
            <li class="nav-item"><%= link_to "サインイン", new_user_session_path, class: "nav-link active" %></li>
            <li class="nav-item"><%= link_to "登録", new_user_registration_path, class: "nav-link active" %></li>
          <% end %>
        </ul>
      </div>
    </nav>

    <% if notice %>
      <div class="alert alert-primary mx-2 my-2" role="alert"><%= notice %></div>
    <% end %>

    <% if alert %>
      <div class="alert alert-danger mx-2 my-2" role="alert"><%= alert %></div>
    <% end %>

    <div class="px-2 py-4">
      <%= yield %>
    </div>
  </body>
</html>
